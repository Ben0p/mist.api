#!/usr/bin/env python

import logging
from time import sleep

from mist.core.sock import LogsConsumer
from mist.api.notifications import methods

if __name__ == '__main__':
    consumer = LogsConsumer('*', methods.handle_log_event)
    methods.handle_log_event({"mes":"test"})
    try:
        consumer.run()
        while True:
        	sleep(1)
    except KeyboardInterrupt:
        consumer.stop()
